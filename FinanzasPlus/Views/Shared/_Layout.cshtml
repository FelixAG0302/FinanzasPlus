<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinanzasPlus</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinanzasPlus.styles.css" asp-append-version="true" />

    <!-- Agregar Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Urbanist:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

</head>
<style>
    nav li{
    margin-right:2%}


   .nav-item{
    
    color:dodgerblue;
    }
    .div-2 {
    @@apply flex justify-between items-center bg-gray-100;
        padding: 32px 80px;
       
    }

    @@media (max-width: 1600px) {
        .div-2 {
    @@apply max-w-full;
            padding: 0 60px;
        }
    }

    .div-3 {
    @@apply text-blue-900 text-2xl font-bold;
        letter-spacing: -0.96px;
        padding: 16px 0;
    }

    .div-4 {
    @@apply flex flex-col text-gray-700 text-base font-normal whitespace-nowrap text-center;
        line-height: 120%;
        margin: auto 0;
    }

    @@media (max-width: 1600px) {
        .div-4 {
    @@apply whitespace-normal;
        }
    }

    .div-128 {
    @@apply bg-blue-900 flex items-center justify-center;
    }

    @@media (max-width: 1600px) {
        .div-128 {
    @@apply max-w-full;
            padding: 0 20px;
        }
    }

    .div-129 {
    @@apply flex flex-col items-center w-full max-w-md mx-auto my-16;
    }

    @@media (max-width: 1600px) {
        .div-129 {
    @@apply my-10;
        }
    }

    .div-130 {
    @@apply text-white text-5xl font-bold tracking-tight;
        letter-spacing: -1.92px;
        font-size:48px;
        text-align:center;
        width:auto;

    }

    @@media (max-width: 1600px) {
        .div-130 {
    @@apply text-3xl;

        }
    }

    .div-131 {
    @@apply self-center flex justify-between mt-12 space-x-4;
    }

    @@media (max-width: 1600px) {
        .div-131 {
    @@apply mt-8;
        }
    }


    .div-132 {
    @@apply bg-gray-100 flex items-center justify-center w-full py-4 px-6 text-gray-900 text-sm font-medium;
    }

    @@media (max-width: 1600px) {
        .div-132 {
    @@apply max-w-full;
            padding: 0 20px;
        }
    }


    /* Estilos para pegar el footer al final de la pantalla */
  

    footer {
    @@apply mt-auto;
        position: sticky;
    }


    .div-5 {
        display: flex;
        gap: 20px;
        justify-content: space-between;
    }

    @@media (max-width: 1600px) {
        .div-5 {
            white-space: initial;
        }
    }
    nav{
    font-size:1.5rem;
        font-family: "Urbanist", sans-serif;
        font-optical-sizing: auto;
        font-style: normal;
    }
    .div-6 {
        color: #00255b;
        font-family: Urbanist, sans-serif;
        font-weight: 700;
    }

    .div-7 {
        font-family: Lexend Deca, sans-serif;
    }

    .div-8 {
        font-family: Lexend Deca, sans-serif;
    }

</style>
<body>
    <header class="div-2">

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
 
                <div class="navbar-collapse collapse d-sm-inline-flex justify-between div-4">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Finanzas Plus</a>
                        </li>
                        @if (Context.Request.Path == "/" || Context.Request.Path == "/Home/Index")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Authentication" asp-action="Login">Login</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Historial" asp-action="HacerTransaccion">Hacer transacción</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Transactions" asp-action="Index">Movimientos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cards" asp-action="Index">Targetas</a>
                        </li>
                      
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

